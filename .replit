modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["android-tools", "cargo", "libiconv", "openjdk", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "web_server"

[[workflows.workflow]]
name = "web_server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/batman/batman/EAGLE && python web_app.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
